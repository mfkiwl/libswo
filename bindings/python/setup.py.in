from setuptools import setup, Extension
from os.path import join

srcdir = '@top_srcdir@'
builddir = '@top_builddir@'

setup(
	name = 'swopy',
	version = '@VERSION@',
	description = 'Python bindings for libswo',
	author = 'Marc Schink',
	author_email = 'swo-dev@marcschink.de',
	license = 'GPLv3+',
	zip_safe = False,
	packages = ['swopy'],
	ext_modules = [
		Extension('_swopy',
			sources = ['swopy_wrap.cxx'],
			library_dirs = [join(builddir, 'bindings/cxx/.libs')],
			libraries = ['swocxx'],
			include_dirs = [srcdir, join(srcdir, 'bindings/python'),
				join(srcdir, 'bindings/cxx')])
	]
)
